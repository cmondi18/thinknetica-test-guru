<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, id: :test_title %>
  </div>

  <div class="form-group">
    <%= form.label :level, class: "form-label" %>
    <%= form.number_field :level, id: :test_level %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </div>

  <div class="form-check">
    <a style="font-size: small">Please, don't make test public if you didn't prepare it (questions, answers and etc.)</a><br>
    <%= form.label :public, class: "form-label" %>
    <%= form.check_box :public, id: :test_public, class: "form-check-label" %>
  </div>

  <div class="form-group"><%= form.submit class: "btn btn-primary" %></div>
<% end %>

<p>
  <%= link_to t('.back_to_tests'), admin_tests_path%>
</p>