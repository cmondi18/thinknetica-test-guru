<h1 class="text-center"><%= t('.header') %> </h1>

<% if @tests.present? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="sort-by-title pointer" scope="col" style="text-align: center">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide'%>
          <%= octicon 'arrow-down', class: 'text-success hide'%>
        </th>
        <th scope="col" style="text-align: center"><%= t('.level') %></th>
        <th scope="col" style="text-align: center"><%= t('.questions_count') %></th>
        <th scope="col" style="text-align: center"><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
<% else %>
  <h1><%= t('.no_tests') %></h1>
<% end %>
